<div class="container_booking">
  <div class="XYZ" style="background-image: url('<%= image_path 'bee_background' %>')"></div>
  <div class="booking-form">
      <div class="flex-container">
			<h1 class="booking-form-headline">When do you want to book <%= @bee.name.capitalize %> ?</h1>
			<img src="<%= image_path('new-bee-icon.png') %>" class="beeicon">
		</div>
        <br>
          <%= simple_form_for [@bee, @booking] do |f| %>
            <%= f.input :start_date %>
            <%= f.input :end_date %>
            <%= f.submit "Book me!", class: "btn btn-bl" %>
          <% end %>
    </div>
</div>


