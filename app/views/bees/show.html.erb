
<h1><%= @bee.name %> is a great bee!</h1>
<h3>owned by <%= @bee.user.name %></h3>
<p><%= @bee.description %></p>


<ul class="list-group">
  <% @bee.bookings.each do |booking| %>
  <% unless booking.accepted == true %>
  <li class="list-group-item">A booking has been requested between <%= booking.start_date %> and <%= booking.end_date %> by <%= booking.user.name %> <%= link_to "Confirm booking", bees_path, class: "btn btn-warning" %></li>
  <% else %>
  <li class="list-group-item">A booking between <%= booking.start_date %> and <%= booking.end_date %> by <%= booking.user.name %> âœ… </li>
  <% end %>
  <% end %>
</ul>
