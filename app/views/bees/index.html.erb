<% beepic = ['bee-closeup3','bee-closeup2', 'bee-banner', 'bee-closeup', 'bee-small', 'bee-small1']  %>
  <%= link_to 'Add a new Bee', new_bee_path, class: "btn btn-primary" %>
<div class="container">
	<div class="d-flex flex-wrap justify-content-around">
		<% @bees.each do |bee| %>
		<div class="card card-bee mt-3 mb-3" style="width: 18rem;">
			<div class="card-img-overlay text-white  text-center" style="width: 110px;"><p class= "rounded-bottom rounded-top" style="background-color: #F4CA65; opacity: 0.95"><%= bee.features.downcase %></p></div>
			<div><%= image_tag  image_path("#{beepic.sample}"), alt: "alttext", class: "card-img-top", height:'250px', width:'100%'%></div>
			<div class="card-body">
				<h5 class="card-title" id="card-bee-title"><%= bee.name.capitalize %></h5>
				<p class="card-text"><%= bee.description %>.</p>
				<a href="#" class="btn btn-primary">Go somewhere</a>
			</div>
			<%#= image_tag image_path("bee-face.jpg"), class: "card-img-top"%>
		</div>
		<% end %>
	</div>
</div>
